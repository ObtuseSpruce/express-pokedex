<div class="container">
  <div id="headline">
  <h1 class="text-center red">Kanto & Johto Pokedex</h1>
  </div>
  <p class="text-center">
    <a href="/pokemon/favorites" class="btn red">Favorites</a>
  </p>
  <% let i = 1 %>
  <div class="bigbox">
  <% pokemon.forEach(function(pokemon) { %>
 
 
    <div class="card col-sm-3" style="width: 18rem;" id="halp">
      <img class="card-img-top" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/<%= i %>.png" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= pokemon.name %></h5>
        <p class="card-text"></p>
        <a href="/pokemon/details/<%= i %>" class="btn blue">Details</a>
          <form method="POST" action="/pokemon">
            <input hidden type="number" name="pokeId" value="<%= i %>">
          <input hidden type="text" name="name" value="<%= pokemon.name %>">
          <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
        </form>
      </div>
    </div>
    <% i++ %>
  <% }); %>
</div>
</div>
